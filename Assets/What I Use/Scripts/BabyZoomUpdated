using System.Collections;
using System.Collections.Generic;
using UnityEngine;


public class BabyZoom : MonoBehaviour
{
    public GameObject cameraSelect;
    public GameObject Tutorial;
    // Start is called before the first frame update
    void Start()
    {
        cameraSelect.SetActive(false);
    }

    // Update is called once per frame
    void Update()
    {

    }
    private void OnMouseDown()
    {
        cameraSelect.SetActive(true);
        //drag the animation you want to destroy onto this script
        GameObject.DestroyImmediate(Tutorial.gameObject);
    }
    private void OnMouseOver()
    {
        if (Input.GetMouseButtonDown(1))
        {
            cameraSelect.SetActive(false);
        }
    }
}
